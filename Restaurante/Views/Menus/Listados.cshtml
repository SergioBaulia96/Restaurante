@{
    ViewData["Title"] = "Listado";
}
<style>
    .print-button {
            background-color: #019a4e;
            color: white;
            border: none;
            padding: 10px 20px;
            margin-bottom: 20px;
            margin-left: 20px;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: background-color 0.3s ease;
        }

        .print-button:hover {
            background-color: #017a3d;
        }

        .print-button i {
            font-size: 20px;
        }
</style>

<body>

<section class="container-encabezado container">
    <h1 class="titulos">Listado de Men√∫s</h1>
</section>
    <button onclick="ImprimirListado()" class="print-button">
        <i class="lni lni-printer"></i>
        <span>Imprimir</span>
    </button>
<div class="tbl-administracion" style="overflow: hidden; border-radius: 20px;">
    <table class="table table-dark table-striped" style="border-radius: 20px; overflow: hidden; width: 100%;" id="ListadoPlatos">
        <thead>
            <tr>
                <th style="background-color: #019a4e;">Tipo Menu</th>
                <th style="background-color: #019a4e;">Plato</th>
                <th class="d-none d-md-table-cell" style="background-color: #019a4e;">Descripcion</th>
                <th style="background-color: #019a4e; width:120px;">Precio</th>
            </tr>
        </thead>
        <tbody id="tbody-listadoPlatos"></tbody>
    </table>
</div>

@section Scripts 
    {
        <script src="~/js/listadoPlatos-1.0.0.js"></script>
    }

</body>