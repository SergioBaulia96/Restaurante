@{
    ViewData["Title"] = "Mesas";
}

<body>
    <section class="container-administracion">
        <h1 class="titulos">Mesas</h1>
        <!-- Button trigger modal -->
        <div>
            <button type="button" class="Btn" data-bs-toggle="modal" data-bs-target="#ModalMesa">
                <div class="sign">+</div>
                <div class="text">Agregar</div>
            </button>
        </div>


        <!-- Modal -->
<div class="modal fade" id="ModalMesa" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content shadow-lg border-0">
      <div class="modal-header text-white" style="background-color: #00c763;">
        <h5 class="modal-title" id="ModalTitulo">Nueva Mesa</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body p-4">
        <form action="" class="needs-validation" novalidate>
          <input type="hidden" id="MesaID" value="0" />

          <div class="mb-3">
            <label for="Numero" class="form-label">Número</label>
            <input type="text" class="form-control shadow-sm" id="Numero" placeholder="Ingrese el número de mesa" required>
            <span id="errorMensajeNombre"
                  style="color:red; display:none; font-size: 15px; padding-left: 4px;">
                  <i class="lni lni-warning pe-1"></i>Debe ingresar un número de mesa.
            </span>
          </div>

          <div class="mb-3">
            <label for="Capacidad" class="form-label">Capacidad</label>
            <input type="number" class="form-control shadow-sm" id="Capacidad" placeholder="Ingrese la capacidad" required>
            <span id="errorMensajeCapacidad"
                  style="color:red; display:none; font-size: 15px; padding-left: 4px;">
                  <i class="lni lni-warning pe-1"></i>Debe ingresar la capacidad.
            </span>
          </div>

          <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" id="Disponible">
            <label class="form-check-label" for="Disponible">Disponible</label>
          </div>
        </form>
      </div>
      <div class="modal-footer border-0">
        <button type="button" onclick="LimpiarModal();" class="btn btn-secondary" data-bs-dismiss="modal">
          <i class="lni lni-close"></i> Cancelar
        </button>
        <button type="button" class="btn text-white" style="background-color: #00c763;" onclick="GuardarMesa()">
          <i class="lni lni-save"></i> Guardar
        </button>
      </div>
    </div>
  </div>
</div>



        <div class="tbl-administracion" style="overflow: hidden; border-radius: 20px;">
            <table class="table table-dark table-striped" style="border-radius: 20px; overflow: hidden; width: 100%;">
                <thead>
                    <tr>
                        <th style="background-color: #019a4e; text-align: center;">Numero</th>
                        <th style="background-color: #019a4e; text-align: center;">Capacidad</th>
                        <th style="background-color: #019a4e; text-align: center;">Estado</th>
                        <th style="width: 150px; background-color: #019a4e;">Editar</th>
                        <th style="width: 150px; background-color: #019a4e;">Eliminar</th>
                    </tr>
                </thead>
                <tbody id="tbody-mesas"></tbody>
            </table>
        </div>

    </section>


    @section Scripts {
        <script src="~/js/mesas-1.0.0.js"></script>
    }

</body>