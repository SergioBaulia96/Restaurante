@{
  ViewData["Title"] = "Meseros";
}

<body>
<section class="container-administracion">
<h1 class="titulos">Meseros</h1>
<!-- Button trigger modal -->
<div>
    <button type="button" class="Btn" data-bs-toggle="modal" data-bs-target="#ModalMesero">
      <div class="sign">+</div>
      <div class="text">Agregar</div>
    </button>
</div>


<!-- Modal -->
<div class="modal fade" id="ModalMesero" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ModalTitulo" >Nuevo Cliente</h5>
      </div>
      <div class="modal-body">
        <form action="">
            <input type="hidden" id="MeseroID" value="0" />

            <label for="Nombre" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="Nombre">
            <span id="errorMensajeNombre"
                style="color:red; display:none; font-size: 15px; padding-left: 4px;">
                <i class="lni lni-warning pe-1"></i>Debe ingresar un nombre
            </span>

            <label for="Apellido" class="form-label">Apellido</label>
            <input type="text" class="form-control" id="Apellido">
            <span id="errorMensajeApellido"
                style="color:red; display:none; font-size: 15px; padding-left: 4px;">
                <i class="lni lni-warning pe-1"></i>Debe ingresar un apellido
            </span>

            <label for="Telefono" class="form-label">Telefono</label>
            <input type="number" class="form-control" id="Telefono">
            <span id="errorMensajeTelefono"
                style="color:red; display:none; font-size: 15px; padding-left: 4px;">
                <i class="lni lni-warning pe-1"></i>Debe ingresar un numero de telefono
            </span>

        </form>
      </div>
      <div class="modal-footer">
        <button type="button" onclick="LimpiarModal();" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-primary" onclick="GuardarMesero()">Guardar</button>
      </div>
    </div>
  </div>
</div>


<div class="tbl-administracion" style="overflow: hidden; border-radius: 20px;">
  <table class="table table-dark table-striped" style="border-radius: 20px; overflow: hidden; width: 100%;">
    <thead>
      <tr>
        <th style="background-color: #019a4e;">Nombre</th>
        <th style="background-color: #019a4e;">Apellido</th>
        <th style="background-color: #019a4e;">Telefono</th>
        <th style="width: 150px; background-color: #019a4e;">Editar</th>
        <th style="width: 150px; background-color: #019a4e;">Eliminar</th>
      </tr>
    </thead>
    <tbody id="tbody-meseros"></tbody>
  </table>
</div>

</section>


@section Scripts {
  <script src="~/js/meseros-1.0.0.js"></script>}

</body>