@{
    ViewData["Title"] = "Pedidos";
}

<body>
    <section class="container-administracion">
        <h1 class="titulos">Pedidos</h1>
        <!-- Button trigger modal -->
        <div>
            <button type="button" class="Btn" data-bs-toggle="modal" data-bs-target="#ModalPedido">
                <div class="sign">+</div>
                <div class="text">Agregar</div>
            </button>
        </div>


        <!-- Modal -->
        <div class="modal fade" id="ModalPedido" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="ModalTitulo">Nuevo Pedido</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="">
                            <input type="hidden" id="PedidoID" value="0" />

                            <label for="ClienteID" class="form-label">Cliente</label>
                            @Html.DropDownList("ClienteID", null, htmlAttributes: new { @class = "form-control" })

                            <label for="MeseroID" class="form-label">Mesero</label>
                            @Html.DropDownList("MeseroID", null, htmlAttributes: new { @class = "form-control" })

                            <label for="MesaID" class="form-label">Mesa</label>
                            @Html.DropDownList("MesaID", null, htmlAttributes: new { @class = "form-control" })

                            <label for="FechaPedido" class="form-label">Fecha/Hora</label>
                            <input type="datetime-local" class="form-control" id="FechaPedido">

                            <label for="Estado" class="form-label">Estado</label>
                            @Html.DropDownList("Estado", null, htmlAttributes: new { @class = "form-control" })


                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" onclick="LimpiarModal();" class="btn btn-secondary"
                            data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-primary" onclick="GuardarPedido()">Guardar</button>
                    </div>
                </div>
            </div>
        </div>


        <div class="tbl-administracion" style="overflow: hidden; border-radius: 20px;">
            <table class="table table-dark table-striped" style="border-radius: 20px; overflow: hidden; width: 100%;">
                <thead>
                    <tr>
                        <th style="background-color: #019a4e; text-align: center;">Cliente</th>
                        <th style="background-color: #019a4e; text-align: center;">Mesero</th>
                        <th style="background-color: #019a4e; text-align: center;">Mesa</th>
                        <th style="background-color: #019a4e; text-align: center;">Fecha y Hora</th>
                        <th style="background-color: #019a4e; text-align: center;">Estado</th>
                        <th style="background-color: #019a4e; text-align: center;">Total</th>
                        <th style="width: 150px; background-color: #019a4e;">Editar</th>
                        <th style="width: 150px; background-color: #019a4e;">Eliminar</th>
                    </tr>
                </thead>
                <tbody id="tbody-pedidos"></tbody>
            </table>
        </div>

    </section>


    @section Scripts {
        <script src="~/js/pedidos-1.0.0.js"></script>
    }

</body>